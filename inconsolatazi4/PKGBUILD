# pkgver=$(curl -s "$url" | awk '/Current version: / { print $3 }')
pkgname=inconsolatazi4
pkgver=1.111
pkgrel=1

pkgdesc='opentype variant of inconsolata from ctan'
url='https://www.ctan.org/tex-archive/fonts/inconsolata'
arch=('any')
license=('OFL')

makedepends=('fontconfig')

source=('http://mirrors.ctan.org/fonts/inconsolata/opentype/Inconsolatazi4-Bold.otf'
        'http://mirrors.ctan.org/fonts/inconsolata/opentype/Inconsolatazi4-Regular.otf'
        'http://mirrors.ctan.org/fonts/inconsolata/doc/OFL.txt')

sha1sums=('d6a1844404d4acc0ed464e721a777b6fe3f3d2ee'
          '590d6ff29527c7bd64db02d6d4b2bf2df5215f2e'
          '0d8ee7bc811b92f758101f267559dd79373ed069')

package() {
    install -Dm644 Inconsolatazi4-Regular.otf "$pkgdir"/usr/share/fonts/Inconsolatazi4/Inconsolatazi4-Regular.otf
    install -Dm644 Inconsolatazi4-Bold.otf "$pkgdir"/usr/share/fonts/Inconsolatazi4/Inconsolatazi4-Bold.otf
    install -Dm644 OFL.txt "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}
