pkgname=sxiv-git
pkgver=1.3.1.r16.g9264a65
pkgrel=1

pkgdesc='A simple X image viewer'
url="https://github.com/Cloudef/sxiv"
arch=('i686' 'x86_64')
license=('GPL2')

depends=('libx11' 'xproto' 'imlib2' 'giflib')
makedepends=('git')

provides=('sxiv')
conflicts=('sxiv')

source=('git://github.com/muennich/sxiv')

md5sums=('SKIP')

pkgver() {
    cd sxiv
    git describe | sed 's/^v//; s/-/.r/; s/-/./'
}

build() {
    cd sxiv
    make
}

package() {
    cd sxiv
    make PREFIX=/usr DESTDIR="$pkgdir" install
}
