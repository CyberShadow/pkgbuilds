pkgname=python-toml
pkgver=0.8.2
pkgrel=1

pkgdesc='Python library for Toms Obvious, Minimal Language'
url='https://pypi.python.org/pypi/toml/'
arch=('any')
license=('MIT')

depends=('python')

source=("https://pypi.python.org/packages/source/t/toml/toml-$pkgver.tar.gz"
        'LICENSE')

sha1sums=('c233f837cb5ea66a786747887f5487495a18ecc9'
          '1817d821f950e52c350570e604cf35c1fd22cd29')

package() {
    cd toml-"$pkgver"
    python setup.py install --root="$pkgdir"/ --optimize=1
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}
