pkgname=termite-git
pkgver=10.r17.g4b08fd9
pkgrel=2

pkgdesc='A simple VTE-based terminal'
url='https://github.com/thestinger/termite/'
arch=('i686' 'x86_64')
license=('GPL')

depends=('vte3-ng')
makedepends=('git')

provides=('termite')
conflicts=('termite')

backup=('etc/xdg/termite/config')

source=('git://github.com/thestinger/termite'
        'git://github.com/thestinger/util'
        'reverse_url_search.patch')

sha1sums=('SKIP'
          'SKIP'
          'c909aa938d09eaa6764d83f1f0822a3c6be2edec')

pkgver() {
    cd termite
    git describe | sed 's/^v//; s/-/.r/; s/-/./'
}

prepare() {
    cd termite
    git submodule init
    git config submodule.util.url "$srcdir"/util
    git submodule update util
    patch -Np1 -i "$srcdir"/reverse_url_search.patch
}

build() {
    cd termite
    make
}

package() {
    cd termite
    make PREFIX=/usr DESTDIR="$pkgdir" install
    install -Dm644 config "$pkgdir"/etc/xdg/termite/config
}
